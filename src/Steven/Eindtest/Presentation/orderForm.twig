{% extends "skeleton.twig" %}

{% block title %}Bestellen{% endblock %}

{% block content %}
    <h1>Bestellen: </h1>
    {% set total = 0 %}
    {% for cartline in cart.cart %}
        <ul>
            <li>
                {{ cartline.product.name }} - {{ cartline.amount}} * {{ cartline.product.price }} - {{ cartline.product.price * cartline.amount }}
                {% set total = total + cartline.product.price * cartline.amount %}
            </li>
        </ul>
    {% endfor %}
    Voorlopig totaal: {{ total }}

