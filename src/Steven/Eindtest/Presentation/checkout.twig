{% extends "skeleton.twig" %}

{% block title %}Overzicht bestelling{% endblock %}

{% block content %}
    <h1>Uw bestelling: </h1>
    {% set total = 0 %}
    {% for cartline in cart.cart %}
        <ul>
            <li>
                {{ cartline.amount}} x {{ cartline.product.name }}  @ {{ cartline.product.price }}€ = {{ cartline.product.price * cartline.amount }}€
                {% set total = total + cartline.product.price * cartline.amount %}
            </li>
        </ul>
    {% endfor %}

    
    Totaal: {{ total }}€
    
    <form action="order.php">
        <input type="submit" name="" value="wijzig bestelling">
    </form>
    {{ error }}
    <form action="checkout.php" method="post">
        Kies een datum (yyyy-mm-dd): 
        <input type="date" name="date">
        <input type="submit" name="confirmSubmit" value="Bevestig bestelling">
    </form>





{% endblock %}